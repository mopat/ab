            android:name="patrick.morczinietz.abicalculatorbayern.AbicalculatorBayern"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="patrick.morczinietz.abicalculatorbayern.AbiMarks"
            android:label="@string/abi_leistungen"
            android:screenOrientation="portrait" >
