        <activity
            android:name="patrick.morczinietz.abicalculatorbayern.SchoolActivity"
            android:label="@string/schools"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="patrick.morczinietz.abicalculatorbayern.UniActivity"
            android:label="@string/unis_string"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="patrick.morczinietz.abicalculatorbayern.HSchoolActivity"
            android:label="@string/hschool_string"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="patrick.morczinietz.abicalculatorbayern.ArtSchoolActivity"
            android:label="@string/artschool_string"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
