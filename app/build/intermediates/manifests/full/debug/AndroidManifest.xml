        <activity
            android:name="patrick.morczinietz.abicalculatorbayern.ToDo"
            android:label="@string/todo_top"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="patrick.morczinietz.abicalculatorbayern.Details"
            android:label="@string/details_top"
            android:screenOrientation="portrait" >
