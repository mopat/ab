        <activity
            android:name="patrick.morczinietz.abicalculatorbayern.Result"
            android:label="@string/your_schnitt"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="patrick.morczinietz.abicalculatorbayern.Dates"
            android:label="@string/date_button_text"
            android:screenOrientation="portrait" >
