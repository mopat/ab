<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/mark_result_tv"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tafel"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="12dp"
        android:text="@string/error"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/points_result_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingTop="10dp"
        android:text="@string/error"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/thumb_iv"
        android:layout_marginTop="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="tv"
        android:text="@string/todo_button_text"
        android:textColor="@color/abi_color" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/back_to_start_button_txt"
        android:textColor="@color/abi_color" />

</LinearLayout>